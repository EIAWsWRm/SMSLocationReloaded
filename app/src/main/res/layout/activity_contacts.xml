<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactsActivity">

    <TextView
        android:id="@+id/contact_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/contactsactivity_text_nocontact"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_contact_1"
        app:layout_constraintEnd_toStartOf="@+id/edit_contact_1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contact_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/contactsactivity_text_nocontact"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_contact_2"
        app:layout_constraintEnd_toStartOf="@+id/edit_contact_2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contact_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/contactsactivity_text_nocontact"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_contact_3"
        app:layout_constraintEnd_toStartOf="@+id/edit_contact_3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/edit_contact_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onEdit1Pressed"
        android:text="@string/contactsactivity_button_edit"
        app:layout_constraintBottom_toTopOf="@+id/edit_contact_2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/edit_contact_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:onClick="onEdit2Pressed"
        android:text="@string/contactsactivity_button_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_contact_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onEdit3Pressed"
        android:text="@string/contactsactivity_button_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_contact_2" />

</android.support.constraint.ConstraintLayout>